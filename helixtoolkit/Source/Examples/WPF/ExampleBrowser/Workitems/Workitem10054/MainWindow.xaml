<Window x:Class="Workitem10054.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ht="http://helixtoolkit.codeplex.com"
        Title="Workitem 10054: TubeVisual3D" Height="600" Width="800">
    <Grid>
        <ht:HelixViewport3D ZoomExtentsWhenLoaded="True">
            <ht:SunLight/>
            <ht:TubeVisual3D Material="{ht:Material Green}" Diameter="0.03" SectionXAxis="0,1,0" IsPathClosed="True" Path="-2.5,-2.5,0 2.5,-2.5,0 2.5,2.5,0 -2.5,2.5,0"/>
            <ht:TubeVisual3D Material="{ht:Material Orange}" Diameter="0.03" IsPathClosed="True" Path="2.5,-2.5,2 2.5,2.5,2 -2.5,2.5,2 -2.5,-2.5,2"/>
        </ht:HelixViewport3D>
    </Grid>
</Window>
